<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles>
  
  <style id="custom-window#frame">
    <attributes childLayout="vertical" valign="top" />
    <effect>
      <onActive name="border" post="true" color="#232323ff" border="0px" />
    </effect>
  </style>

  <style id="custom-window#bar">
    <attributes width="100%" height="20px" padding="2px" backgroundColor="#232323ff" childLayout="horizontal" />
  </style>
  
  <style id="custom-window#title" base="base-font">
    <attributes width="*" height="20px" align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="false" color="#ffffff" />
  </style>

  <style id="custom-window#content">
    <attributes width="100%" height="*" padding="8px" backgroundColor="#000000ff" childLayout="center" />
  </style>

  <style id="custom-window#close-button">
    <attributes backgroundImage="Interface/window/window-close-button.png" width="14px" height="14px"  align="center" valign="center" />
  </style>
</nifty-styles>