<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	
	
	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="Interface/button/custom-button.xml" />
	
	<useControls filename="nifty-default-controls.xml" />
  
	<!-- 

		!!! DON'T CHANGE THIS FILE - IT WILL BREAK THE GAME !!!

	-->
  
	<screen id="start" controller="de.bkiss.gt.gui.GUIController">
	
		<layer id="start-background" childLayout="center">
		  	<image filename="Interface/start-background.jpg" width="100%" height="100%"></image>
		</layer>
		
		<layer id="foreground" childLayout="vertical">  
			<panel id="panel_top" height="50%" width="50%" align="center" childLayout="center">  
				<!-- spacer -->
			</panel>
			
			<panel id="panel_mid" height="25%" width="300" align="center" childLayout="center">  
				<text text="${CALL.getDescriptionText()}" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"/>
			</panel>
			  
			<panel id="panel_bottom" height="25%" width="500" align="center" childLayout="horizontal">  
				<panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">  
					<control name="button" style="custom-button" label="${CALL.getUserName()} starts the game" id="StartButton" align="center" valign="center" width="180" height="50" visibleToMouse="true"> 
						<interact onRelease="startGame()" />
     				</control>
				</panel>
				
				<panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">  
					<control name="button" style="custom-button" label="${CALL.getUserName()} quits the game" id="QuitButton" align="center" valign="center" width="180" height="50" visibleToMouse="true"> 
						<interact onRelease="quitGame()" />
      				</control>
				</panel>
			</panel>
		</layer>
		
  	</screen>
  	
  	
  	<screen id="hud" controller="de.bkiss.gt.gui.GUIController">
  	
		<layer id="hud-background" childLayout="vertical">
		  	<image filename="Interface/hud/hud-frame.png" width="100%" height="100%" imageMode="resize:62,4,62,59,62,4,62,5,62,4,62,192"/>
		</layer>
		
		<layer id="foreground" childLayout="vertical">
			<panel id="panel_hud_spacer" width="100%" height="" childLayout="center"></panel>
			
			<panel id="panel_hud_buttons" width="100%" height="" childLayout="center">
				<panel id="panel_hud_buttons_inner" width="" height="" childLayout="horizontal">
					<image filename="Interface/hud/spacer_l.png"></image>
					<image id="button_info" filename="Interface/hud/hud-button-info.png" visibleToMouse="true"><interact onRelease="toggleObjectMarkers()" /></image>
					<image filename="Interface/hud/spacer_m.png"></image>
					<image id="button_build" filename="Interface/hud/hud-button-buil-off.png" visibleToMouse="true"><interact onRelease="openPopup(build)" /></image>
					<image filename="Interface/hud/spacer_m.png"></image>
					<image id="button_destroy" filename="Interface/hud/hud-button-wrck-off.png" visibleToMouse="true"><interact onRelease="openPopup(destroy)" /></image>
					<image filename="Interface/hud/spacer_m.png"></image>
					<image id="button_bank" filename="Interface/hud/hud-button-bank.png" visibleToMouse="true"><interact onRelease="openPopup(bank)" /></image>
					<image filename="Interface/hud/spacer_m.png"></image>
					<image id="" filename="Interface/hud/hud-button-opin.png" visibleToMouse="true"><interact onRelease="openPopup(opinions)" /></image>
					<image filename="Interface/hud/spacer_m.png"></image>
					<image id="" filename="Interface/hud/hud-button-quit.png" visibleToMouse="true"><interact onRelease="quitGame()" /></image>
					<image filename="Interface/hud/spacer_r.png"></image>
				</panel>
			</panel>
			
			<panel id="panel_hud_info" width="100%" height="115" childLayout="horizontal" visibleToMouse="true">
					<panel id="panel_hud_info_spacer1" width="56" height="100%" childLayout="center"></panel>
					<panel id="panel_hud_info_stats" height="100%" childLayout="vertical">
						<panel id="panel_hud_info_stats_player" height="36" childLayout="horizontal">
							<image id="panel_hud_info_avatar" filename="Interface/hud/land.png" height="36" width="36"></image>
							<panel id="panel_hud_info_stats_spacer1" height="100%" width="5" backgroundColor="#ff00ff33"></panel>
							<panel id="panel_hud_info_stats_player_data" height="100%" childLayout="vertical" backgroundColor="#ffffff33">
								<control id="player_name" name="label" size="12" text="" align="left" height="18" backgroundColor="#ffffff33"/>
								<control id="player_money" name="label" color="#f4fa58ff" font="Interface/Fonts/Default.fnt" text="" align="left" height="18" backgroundColor="#ffffff33"/>
							</panel>
						</panel>
						<panel id="panel_hud_info_player_spacer1" height="15" childLayout="center"></panel>
							<control id="game_stat_time" name="label" font="Interface/Fonts/Default.fnt" text="STAT" align="left" height="18" backgroundColor="#ffffff33"/>
							<control id="game_stat_district_tot_luxury" name="label" font="Interface/Fonts/Default.fnt" text="STAT" align="left" height="18" backgroundColor="#ffffff33"/>
							<control id="game_stat_district_avg_luxury" name="label" font="Interface/Fonts/Default.fnt" text="STAT" align="left" height="18" backgroundColor="#ffffff33"/>
					</panel>
					
					<panel id="panel_hud_info_object" height="100%" childLayout="horizontal">
						<panel id="panel_hud_info_object_spacer1" height="100%" childLayout="center"></panel>
						
						<panel id="panel_hud_info_object_cat" height="100" width="100" align="right" childLayout="vertical" backgroundColor="#ff000033">
							<panel id="panel_hud_info_cat_spacer" height="15" childLayout="center"></panel>
							<control id="cat_1" name="label" font="Interface/Fonts/Default.fnt" text="" align="left" height="18" backgroundColor="#ffffff33"/>
							<control id="cat_2" name="label" font="Interface/Fonts/Default.fnt" text="" align="left" height="18" backgroundColor="#ffffff33"/>
							<control id="cat_3" name="label" font="Interface/Fonts/Default.fnt" text="" align="left" height="18" backgroundColor="#ffffff33"/>
							<control id="cat_4" name="label" font="Interface/Fonts/Default.fnt" text="" align="left" height="18" backgroundColor="#ffffff33"/>
							<control id="cat_5" name="label" font="Interface/Fonts/Default.fnt" text="" align="left" height="18" backgroundColor="#ffffff33"/>
						</panel>
						
						<panel id="panel_hud_info_object_spacer2" width="5" height="100%" childLayout="center"></panel>
						
						<panel id="panel_hud_info_object_data" width="120" height="100%" align="right" childLayout="vertical" backgroundColor="#00ff0033">
							<panel id="panel_hud_info_data_spacer" height="15" childLayout="center"></panel>
							<control id="info_1" name="label" text="" align="left" height="18"/>
							<control id="info_2" name="label" text="" align="left" height="18"/>
							<control id="info_3" name="label" text="" align="left" height="18"/>
							<control id="info_4" name="label" text="" align="left" height="18"/>
							<control id="info_5" name="label" text="" align="left" height="18"/>
						</panel>
						
						<panel id="panel_hud_info_image_panel" width="120" height="100%" align="right" childLayout="center">
							<image id="panel_hud_info_image" filename="${CALL.getDefaultImgPath()}" height="100" width="100"></image>
						</panel>
					</panel>
					
					<panel id="panel_hud_info_spacer2" width="56" height="100%" childLayout="center"></panel>
			</panel>
		</layer>

  	</screen>
	
	
	<!-- *** POPUP WINDOWS *** -->
  	
  	
  	<popup id="popup_buy" childLayout="center" backgroundColor="#00000088" visibleToMouse="true">
		
		<panel id="popup_buy_window" width="600" height="400" childLayout="vertical" backgroundColor="#000000ff">
			<panel id="popup_buy_window_titlebar" width="100%" height="20" childLayout="center" backgroundColor="#a55731ff">
				<control id="popup_buy_window_title" name="label" font="Interface/Fonts/Default.fnt" text="" align="center" height="100%"/>
			</panel>
			
			<panel id="popup_buy_window_content" width="100%" height="330" childLayout="vertical" backgroundColor="#000000ff">
				<panel id="popup_buy_window_content_spacer" width="100%" height="90" childLayout="horizontal"></panel>
				<image id="popup_buy_img" filename="${CALL.getCurrentImgPath()}" align="center" height="100" width="100"></image>
				<control id="popup_buy_text" name="label" font="Interface/Fonts/Default.fnt" text="" align="center" height="50"/>
			</panel>
			
			<panel id="popup_buy_window_buttons" width="100%" height="50" childLayout="horizontal" backgroundColor="#000000ff">
				<panel id="popup_buy_window_buttons_spacer" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel>
				
				<control name="button" style="custom-button" label="Buy!" id="button_popup_buy_ok" align="center" valign="center" width="100" height="30" visibleToMouse="true">
					<interact onRelease="buyHouse()" />
     			</control>
				
				<panel id="popup_buy_window_buttons_spacer" width="20" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel>
				
				<control name="button" style="custom-button" label="Cancel" id="button_popup_buy_cancel" align="center" valign="center" width="100" height="30" visibleToMouse="true">
					<interact onRelease="closePopup()" />
     			</control>
				
				<panel id="popup_buy_window_buttons_spacer" width="20" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel>
			</panel>
		</panel>
	</popup>
	
	
	<popup id="popup_build" childLayout="center" backgroundColor="#00000088" visibleToMouse="true">
		
		<panel id="popup_build_window" width="600" height="400" childLayout="vertical" backgroundColor="#000000ff">
			<panel id="popup_build_window_titlebar" width="100%" height="20" childLayout="center" backgroundColor="#a55731ff">
				<control id="popup_build_window_title" name="label" font="Interface/Fonts/Default.fnt" text="" align="center" height="100%"/>
			</panel>
			
			<panel id="popup_build_window_content" width="100%" height="330" childLayout="vertical" backgroundColor="#000000ff">
				<panel id="popup_build_window_content_spacer1" width="100%" height="20" childLayout="horizontal"></panel>
				<panel id="popup_build_window_content_gallery1" width="100%" childLayout="horizontal" backgroundColor="#000000ff">
					<panel id="popup_build_window_content_gallery1_1" childLayout="vertical" width="200" backgroundColor="#000000ff">
						<image id="popup_build_img_h1" filename="Interface/hud/house_1.png" align="center" height="100" width="100" visibleToMouse="true">
							<interact onRelease="selectBuild(H1)" />
						</image>
						<control id="popup_build_desc_h1" name="label" text="Hovel" align="center" height="18"/>
						<control id="popup_build_price_h1" name="label" text="" align="center" height="18"/>
					</panel>
					<panel id="popup_build_window_content_gallery1_2" childLayout="vertical" width="200" backgroundColor="#000000ff">
						<image id="popup_build_img_h2" filename="Interface/hud/house_2.png" align="center" height="100" width="100" visibleToMouse="true">
							<interact onRelease="selectBuild(H2)" />
						</image>
						<control id="popup_build_desc_h2" name="label" text="Family House" align="center" height="18"/>
						<control id="popup_build_price_h2" name="label" text="" align="center" height="18"/>
					</panel> 
					<panel id="popup_build_window_content_gallery1_3" childLayout="vertical" width="200" backgroundColor="#000000ff">
						<image id="popup_build_img_h3" filename="Interface/hud/house_3.png" align="center" height="100" width="100" visibleToMouse="true">
							<interact onRelease="selectBuild(H3)" />
						</image>
						<control id="popup_build_desc_h3" name="label" text="Mansion" align="center" height="18"/>
						<control id="popup_build_price_h3" name="label" text="" align="center" height="18"/>
					</panel>
				</panel>
				
				<panel id="popup_build_window_content_spacer2" width="100%" height="20" childLayout="horizontal"></panel>
				
				<panel id="popup_build_window_content_gallery2" width="100%" childLayout="horizontal" backgroundColor="#000000ff">
					<panel id="popup_build_window_content_gallery2_1" childLayout="vertical" width="200" backgroundColor="#000000ff">
						<image id="popup_build_img_h21" filename="Interface/hud/public_club.png" align="center" height="100" width="100" visibleToMouse="true">
							<interact onRelease="selectBuild(E1)" />
						</image>
						<control id="popup_build_desc_h21" name="label" text="Club" align="center" height="18"/>
						<control id="popup_build_price_h21" name="label" text="" align="center" height="18"/>
					</panel>
					<panel id="popup_build_window_content_gallery2_2" childLayout="vertical" width="200" backgroundColor="#000000ff">
						<image id="popup_build_img_h22" filename="Interface/hud/public_gallery.png" align="center" height="100" width="100" visibleToMouse="true">
							<interact onRelease="selectBuild(E2)" />
						</image>
						<control id="popup_build_desc_h22" name="label" text="Art Gallery" align="center" height="18"/>
						<control id="popup_build_price_h22" name="label" text="" align="center" height="18"/>
					</panel>
					<panel id="popup_build_window_content_gallery2_3" childLayout="vertical" width="200" backgroundColor="#000000ff">
						<image id="popup_build_img_h23" filename="Interface/hud/public_school.png" align="center" height="100" width="100" visibleToMouse="true">
							<interact onRelease="selectBuild(E3)" />
						</image>
						<control id="popup_build_desc_h23" name="label" text="Elementary School" align="center" height="18"/>
						<control id="popup_build_price_h23" name="label" text="" align="center" height="18"/>
					</panel>
				</panel>
			</panel>
			
			<panel id="popup_build_window_buttons" width="100%" height="50" childLayout="horizontal" backgroundColor="#000000ff">
				<panel id="popup_build_window_buttons_spacer" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel> 
				<control id="popup_build_selection" name="label" text="Select the house you want to build!" size="12" align="center" height="50"/>
				<panel id="popup_build_window_buttons_spacer" width="30" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel>
				
				<control name="button" style="custom-button" label="Build!" id="button_popup_build_ok" align="center" valign="center" width="100" height="30" visibleToMouse="true" visible="false">
					<interact onRelease="buildHouse()" />
     			</control>
				
				<panel id="popup_build_window_buttons_spacer" width="20" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel>
				
				<control name="button" style="custom-button" label="Cancel" id="button_popup_build_cancel" align="center" valign="center" width="100" height="30" visibleToMouse="true">
					<interact onRelease="closePopup()" />
     			</control>
				
				<panel id="popup_build_window_buttons_spacer" width="20" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel>
			</panel> 
		</panel>
	</popup>
	
	
	<popup id="popup_edit" childLayout="center" backgroundColor="#00000088" visibleToMouse="true">
		
		<panel id="popup_edit_window" width="600" height="400" childLayout="vertical" backgroundColor="#000000ff">
			<panel id="popup_edit_window_titlebar" width="100%" height="20" childLayout="center" backgroundColor="#a55731ff">
