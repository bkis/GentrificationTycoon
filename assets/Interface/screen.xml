					<interact onRelease="closePopup()" />
     			</control>
				
				<panel id="popup_destroy_window_buttons_spacer" width="20" height="50" childLayout="horizontal" backgroundColor="#00000000"></panel>
			</panel>
		</panel>
	</popup>
	
	
	
