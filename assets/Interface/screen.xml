<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	
	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="Interface/button/custom-button.xml" />
	<useControls filename="nifty-default-controls.xml" />
  
  
  
	<screen id="start" controller="de.bkiss.gt.gui.GUIController">
		<layer id="start-background" childLayout="center">
		  	<image filename="Interface/start-background.png" width="100%" height="100%"></image>
		</layer>
		<layer id="foreground" childLayout="vertical">  
			<panel id="panel_top" height="50%" width="50%" align="center" childLayout="center">  
				<!-- spacer -->
			</panel>
			
			<panel id="panel_mid" height="25%" width="300" align="center" childLayout="center">  
				<text text="${CALL.getDescriptionText()}" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"/>
			</panel>
			  
			<panel id="panel_bottom" height="25%" width="500" align="center" childLayout="horizontal">  
					<panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">  
						<control name="button" style="custom-button" label="${CALL.getUserName()} starts the game" id="StartButton" align="center" valign="center" width="180" height="50" visibleToMouse="true"> 
							<interact onRelease="startGame()" />
         				</control>
					</panel>
					
					<panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">  
						<control name="button" style="custom-button" label="${CALL.getUserName()} quits the game" id="QuitButton" align="center" valign="center" width="180" height="50" visibleToMouse="true"> 
							<interact onRelease="quitGame()" />
          				</control>
					</panel>
			</panel>
		</layer>
  	</screen>
  	
  	
  	<screen id="hud" controller="de.bkiss.gt.gui.GUIController">
		<layer id="hud-background" childLayout="vertical">
		  	<image filename="Interface/hud-frame.png" width="100%" height="100%" imageMode="resize:62,4,62,59,62,4,62,5,62,4,62,64"/>
		</layer>
		<layer id="foreground" childLayout="horizontal">
			<panel id="panel_left" width="80%" height="100%" childLayout="vertical">  
					<panel id="panel_bottom_left" height="75%" width="20%" valign="center" childLayout="center">  
						<!-- <image filename="Interface/face1.png" valign="center" align="center" height="50%" width="30%" >
						</image> -->
					</panel>
			</panel>
			  
			<panel id="panel_right" width="20%" height="100%" childLayout="vertical">  
				<panel id="panel_top_right1" width="100%" height="15%" childLayout="center">  
				</panel>
				
				<panel id="panel_top_right2" width="100%" height="15%" childLayout="center">  
				</panel>
				
				<panel id="panel_top_right" width="100%" height="70%" valign="center" childLayout="vertical">  
				</panel>
			</panel>
		</layer>
  	</screen>
	
</nifty>