<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	
	
	<useStyles filename="nifty-default-styles.xml" />
	<useStyles filename="Interface/button/custom-button.xml" />
	<useStyles filename="Interface/window/custom-window.xml" />
	
	<useControls filename="nifty-default-controls.xml" />
	<useControls filename="Interface/window/custom-window-control.xml" />
  
  
  
	<screen id="start" controller="de.bkiss.gt.gui.GUIController">
	
		<layer id="start-background" childLayout="center">
		  	<image filename="Interface/start-background.png" width="100%" height="100%"></image>
		</layer>
		
		<layer id="foreground" childLayout="vertical">  
			<panel id="panel_top" height="50%" width="50%" align="center" childLayout="center">  
				<!-- spacer -->
			</panel>
			
			<panel id="panel_mid" height="25%" width="300" align="center" childLayout="center">  
				<text text="${CALL.getDescriptionText()}" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"/>
			</panel>
			  
			<panel id="panel_bottom" height="25%" width="500" align="center" childLayout="horizontal">  
				<panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">  
					<control name="button" style="custom-button" label="${CALL.getUserName()} starts the game" id="StartButton" align="center" valign="center" width="180" height="50" visibleToMouse="true"> 
						<interact onRelease="startGame()" />
     				</control>
				</panel>
				
				<panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">  
					<control name="button" style="custom-button" label="${CALL.getUserName()} quits the game" id="QuitButton" align="center" valign="center" width="180" height="50" visibleToMouse="true"> 
						<interact onRelease="quitGame()" />
      				</control>
				</panel>
			</panel>
		</layer>
		
  	</screen>
  	
  	
  	
  	
  	<screen id="hud" controller="de.bkiss.gt.gui.GUIController">
  	
		<layer id="hud-background" childLayout="vertical">
		  	<image filename="Interface/hud-frame.png" width="100%" height="100%" imageMode="resize:62,4,62,59,62,4,62,5,62,4,62,192"/>
		</layer>
		
		<layer id="foreground" childLayout="vertical">
			<panel id="panel_hud_spacer" width="100%" height="" childLayout="center">  
					<!-- spacer -->
			</panel>
			
			<panel id="panel_hud_buttons" width="100%" height="" childLayout="center">
				<panel id="panel_hud_buttons_inner" width="" height="" childLayout="horizontal">
					<image filename="Interface/spacer_l.png"></image>
					<image filename="Interface/hud-button-info.png"  visibleToMouse="true"><interact onRelease="quitGame()" /></image>
					<image filename="Interface/spacer_m.png"></image>
					<image filename="Interface/hud-button-buil.png"  visibleToMouse="true"><interact onRelease="quitGame()" /></image>
					<image filename="Interface/spacer_m.png"></image>
					<image filename="Interface/hud-button-wrck.png" visibleToMouse="true"><interact onRelease="quitGame()" /></image>
					<image filename="Interface/spacer_m.png"></image>
					<image filename="Interface/hud-button-bank.png" visibleToMouse="true"><interact onRelease="quitGame()" /></image>
					<image filename="Interface/spacer_m.png"></image>
					<image filename="Interface/hud-button-opin.png" visibleToMouse="true"><interact onRelease="quitGame()" /></image>
					<image filename="Interface/spacer_m.png"></image>
					<image filename="Interface/hud-button-quit.png" visibleToMouse="true"><interact onRelease="quitGame()" /></image>
					<image filename="Interface/spacer_r.png"></image>
				</panel>
			</panel>
			
			<panel id="panel_hud_info" width="100%" height="115" childLayout="horizontal">  
				<panel id="panel_hud_info_left" width="30%" height="100%" childLayout="center">  
				</panel>
				
				<panel id="panel_hud_info_right" width="70%" height="100%" childLayout="center">  
				</panel>
			</panel>
		</layer>
		
		<layer id="windows" childLayout="absolute">
			<control id="window-3" name="window" style="custom-window" title="Window Title!" width="300px" height="200px" x="100" y="100">
				<panel id="window_content" width="100%" height="100%" childLayout="center" backgroundColor="#0000">
					<text text="AAARRRGGGHHHH!!!!!" style="base-font" color="#eeef" valign="center" width="100%" />
				</panel>
			</control>
			
			<control id="window-2" name="window" style="custom-window" title="Window Title!" width="300px" height="200px" x="100" y="100">
				<panel id="window_content" width="100%" height="100%" childLayout="center" backgroundColor="#0000">
					<text text="AAARRRGGGHHHH!!!!!" style="base-font" color="#eeef" valign="center" width="100%" />
				</panel>
			</control>
		</layer>
		
  	</screen>
	
</nifty>